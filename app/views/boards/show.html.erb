<h1><%= @board.name %></h1>
<%= link_to "Edit", edit_board_path(@board), class: "ui orange button inverted" %>
<%= link_to "Delete", @board, method: :delete, class: "ui red button inverted" %>
<%= link_to "New List", new_board_list_path(@board), class:"ui green button inverted"%>


<hr />
<div class="ui grid">
  <% @board.lists.each do |list| %>
    <div class="five wide column">
      <div class="ui raised center aligned red segment">
          <h3><%= list.name %></h3>
          <%= link_to "New Card", new_list_card_path(list), class:"ui mini green button inverted"%>
          <hr/>
            <% list.tasks.sort_by.each do |card| %>
              <div class="five wide column">
                <div class="ui raised center aligned blue segment">
                  <h3><%= task.name %></h3>
                  <hr/>
                  <p><%= task.description %></p>
                  <%= link_to "Edit", edit_list_task_path(task.list_id, task.id), class: "ui mini orange button inverted" %>
                  <%= link_to "Delete", list_card_path(card.list_id, card.id), method: :delete, class: "ui mini red button inverted" %>
                </div>
              </div>
              <hr/>
            <%end%>
          <%= link_to "Edit", edit_board_list_path(list.board_id, list.id), class: "ui mini orange button inverted" %>
          <%= link_to "Delete", list, method: :delete, class: "ui mini red button inverted" %>
      </div>
    </div>
  <% end %>
</div>